import static cdac.java.q1.pen.Brand.REYNOLDS;
import static cdac.java.q1.pen.Brand.STYLO;
import static java.time.LocalDate.parse;

import java.util.HashMap;
import java.util.Map;

import cdac.java.q1.pen.Pen;
import cdac.java.q2.task.Task;

public class TaskUtils {
	
	public static Map<Integer, Task> populateMap(){
		Map<Integer, Task> taskMap = new HashMap<>();
		taskMap.put(100, new Pen(CELLO, "Teal", "Blue", "Plastic", 15, parse("2023-10-11")
				, parse("2023-10-11"), 10.0));
		taskMap.put(101, new Pen(REYNOLDS, "Red", "Red", "Alloy", 11, parse("2023-11-09")
				, parse("2023-11-09"), 20.0));
		taskMap.put(102, new Pen(PARKER, "Green", "Black", "Metal", 20, parse("2023-03-13")
				, parse("2023-03-13"), 50.0));
		taskMap.put(104, new Pen(STYLO, "Yellow", "Violet", "Plastic", 60, parse("2022-06-21")
				, parse("2022-06-21"), 30.0));
		taskMap.put(105, new Pen(LINC, "Brown", "Blue", "Plastic", 60, parse("2022-06-21")
				, parse("2022-08-21"), 30.0));
		taskMap.put(106, new Pen(HAUSER, "Yellow", "Grey", "Alloy", 60, parse("2022-06-21")
				, parse("2022-12-21"), 30.0));
		return taskMap;
	}
}
